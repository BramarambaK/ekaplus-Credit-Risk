<?xml version="1.0" encoding="UTF-8"?>
<!-- https://logback.qos.ch/manual/configuration.html -->
<!-- For assistance related to logback-translator or configuration  -->
<!-- files in general, please contact the logback user mailing list -->
<!-- at http://www.qos.ch/mailman/listinfo/logback-user             -->
<!--                                                                -->
<!-- For professional support please see                            -->
<!--    http://www.qos.ch/shop/products/professionalSupport         -->
<!--                                                                -->
<configuration>
<property name="service" value="CCR" />
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <Target>System.out</Target>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} %-5p %X{tenantName:-connect}-%X{requestId}-${service}  %c{1}:%L - %m%n</pattern>
    </encoder>
  </appender>
  
  <appender name="file" class="ch.qos.logback.classic.sift.SiftingAppender">
    <!-- in the absence of the class attribute, it is assumed that the
         desired discriminator type is
         ch.qos.logback.classic.sift.MDCBasedDiscriminator -->
    <discriminator>
      <key>tenantName</key>
      <defaultValue>creditrisk</defaultValue>
    </discriminator>
    <sift>
    
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <File>log/${tenantName}-creditrisk-api.log</File>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} %-5p %X{tenantName:-anonymous}-%X{requestId}-${service} %c{1}:%L - %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <maxIndex>10</maxIndex>
      <FileNamePattern>log/${tenantName}-creditrisk-api.log.%i</FileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>5MB</MaxFileSize>
    </triggeringPolicy>
  </appender>
  
   </sift>
   </appender>
  
 <logger name="org.springframework" level="ERROR"/>
 <logger name="org.hibernate" level="ERROR"/>
  <logger name="org.apache" level="WARN" />
  <logger name="com.eka.connect.creditrisk.interceptor.RequestResponseLogger" level="ERROR" />
  <logger name="com.eka.connect.creditrisk.interceptor.RequestValidatorInterceptor" level="INFO" />
  <logger name="com.eka.connect" level="DEBUG" />
  <logger name="springfox.documentation" level="WARN" />
  <root level="DEBUG">
    <appender-ref ref="stdout"/>
    <appender-ref ref="file"/>
  </root>
</configuration>